<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <form action="/signin" method="post">
        <h2 class="form-signin-heading">Please sign in / sign up</h2>
        <div class="form-group">
          <input type="text" id="username" name="username" class="form-control" placeholder="User name" required="true"
                 autofocus="true">
        </div>
        <div class="form-group">
          <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in / sign up</button>
      </form>
    </div>
  </div>
</div>


